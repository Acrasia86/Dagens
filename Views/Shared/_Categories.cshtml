@model IEnumerable<Category>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="buttons-container">
    <div class="buttons-column-container1">
        @foreach (var category in Model.Take(3))
        {


            <a class="btn btn-success button-main" asp-controller="Category" asp-action="Categories" asp-route-id="@category.Id">
                @category.CategoryName
            </a>


        }
    </div>
    <div class="buttons-column-container1">
        @foreach (var item in Model.Skip(3).Take(3))
        {
            <a class="btn btn-success button-main" asp-controller="Category" asp-action="Categories" asp-route-id="@item.Id">
                @item.CategoryName
            </a> 

        }
    </div>
    </div>




